model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String
  password      String
  isAdmin       Boolean
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  main_data     main_data[]
  students_data students_data[]
  absen         absen[]
  date          date[]
  absens        absens[]
  nilai_siswa   nilai_siswa[]
  kd            kd[]
  nilai         nilai[]
}

model main_data {
  id          Int      @id @default(autoincrement())
  guru_kelas  String
  nip         Int      @unique
  kelas_huruf String
  kelas_angka String
  semester    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  id_user     Int
  user        User     @relation(fields: [id_user], references: [id])
}

model students_data {
  id                                   Int           @id @default(autoincrement())
  id_user                              Int
  nama_lengkap                         String
  nama_panggilan                       String
  nisn                                 String
  jenis_kelamin                        String
  tempat_tanggal_lahir                 String
  agama                                String
  kewarganegaraan                      String
  anak_keberapa                        String
  jumlah_saudara_kandung               String
  jumlah_saudara_tiri                  String
  jumlah_saudara_angkat                String
  bahasa_sehari_hari                   String
  alamat                               String
  nomor_telepon                        String
  bertempat_tinggal_bersama            String
  jarak_tempat_tinggal_ke_sekolah      String
  golongan_darah                       String
  penyakit_yang_pernah_diderita        String
  kelainan_jasmani                     String
  tinggi_dan_berat_badan_saat_diterima String
  tahun_pelajaran                      String
  semester                             String
  berat_badan                          String
  tinggi_badan                         String
  asal_murid                           String
  nama_tk                              String
  alamat_tk                            String
  tanggal_dan_nomor_sstb               String
  nama_sekolah_asal                    String
  dari_tingkat_kelas                   String
  nis                                  String
  alasan_pindah                        String
  diterima_tanggal                     String
  diterima_saat_kelas                  String
  nama_ayah                            String
  tahun_lahir_ayah                     String
  agama_ayah                           String
  pendidikan_ayah                      String
  pekerjaan_ayah                       String
  nama_ibu                             String
  tahu_lahir_ibu                       String
  agama_ibu                            String
  pendidikan_ibu                       String
  pekerjaan_ibu                        String
  nama_wali                            String
  tahun_lahir_wali                     String
  agama_wali                           String
  pendidikan_wali                      String
  pekerjaan_wali                       String
  alamat_wali                          String
  hubungan_keluarga_wali               String
  tahun_sekarang                       String
  kelas_sekarang                       String
  dari_kelas                           String
  tanggal_meninggalkan_sekolah         String
  kelas_yang_ditinggalkan              String
  keterangan_perkembangan_pesdik       Json[]
  alasan_meninggalkan_sekolah          String
  sekolah_yang_dituju                  String
  kecamatan_sekolah_tujuan             String
  kabupaten_sekolah_tujuan             String
  provinsi_sekolah_tujuan              String
  tempat_belajar                       String
  nomor_ijasah                         String
  akan_melanjutkan_ke                  String
  createdAt                            DateTime      @default(now())
  updatedAt                            DateTime      @updatedAt
  user                                 User          @relation(fields: [id_user], references: [id])
  absens                               absens[]
  nilai_siswa                          nilai_siswa[]
  kd                                   kd[]
}

model date {
  id             Int      @id @default(autoincrement())
  date           DateTime
  mounth         String
  user_id        Int
  mata_pelajaran String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  absen          absen[]
  user           User     @relation(fields: [user_id], references: [id])
}

model absen {
  id        Int      @id @default(autoincrement())
  date_id   Int
  absens_id Int
  user_id   Int
  mounth    String
  subject   String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date      date     @relation(fields: [date_id], references: [id])
  user      User     @relation(fields: [user_id], references: [id])
  absens    absens   @relation(fields: [absens_id], references: [id], onDelete: Cascade)
}

model absens {
  id        Int           @id @default(autoincrement())
  siswa_id  Int
  user_id   Int
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  students  students_data @relation(fields: [siswa_id], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [user_id], references: [id])
  absen     absen[]
}

model nilai_siswa {
  id        Int           @id @default(autoincrement())
  siswa_id  Int
  user_id   Int
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  students  students_data @relation(fields: [siswa_id], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [user_id], references: [id])
  nilai     nilai[]
}

model kd {
  id              Int            @id @default(autoincrement())
  nilai_type      String
  mapel           String
  no_kd           String
  ket_kd          String
  user_id         Int
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  user            User           @relation(fields: [user_id], references: [id])
  nilai           nilai[]
  students_data   students_data? @relation(fields: [students_dataId], references: [id])
  students_dataId Int?
}

model nilai {
  id          Int         @id @default(autoincrement())
  id_nilai    Int
  nilai_type  String
  mapel       String
  id_kd       Int
  nilai       Int
  user_id     Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  nilai_siswa nilai_siswa @relation(fields: [id_nilai], references: [id], onDelete: Cascade)
  kd          kd          @relation(fields: [id_kd], references: [id])
  user        User        @relation(fields: [user_id], references: [id])
}
